<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import commons.ui.control.datepicker.DatePickerControl?>
<fx:root type="GridPane" alignment="center" stylesheets="@search_bar.css" vgap="10"   hgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" >
    <children>
        <DatePickerControl fx:id="startPicker" prefHeight="30" styleClass="control" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets>
                    <right>15</right>
                </Insets>
            </GridPane.margin>
        </DatePickerControl>
        <Label text="~" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <DatePickerControl fx:id="endPicker" styleClass="control" GridPane.columnIndex="2" GridPane.rowIndex="0" >
            <GridPane.margin>
                <Insets>
                    <left>15</left>
                </Insets>
            </GridPane.margin>
        </DatePickerControl>
        <ComboBox fx:id="combo_period"  styleClass="control" GridPane.columnIndex="3" GridPane.rowIndex="0" />
        <Button fx:id="search_btn" prefWidth="150" styleClass="control" text="Search" textFill="white" GridPane.columnIndex="4" GridPane.rowIndex="0" />
    </children>
</fx:root>
